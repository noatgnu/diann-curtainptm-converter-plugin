params {
    input = null
    outdir = './results'
    pr_file = null
    report_file = null
    modification_type = 'UniMod:21'
    fasta_file = null
    localization_score_col = 'PTM.Site.Confidence'
    multiple_site = false
    uniprot_columns = 'accession,id,sequence,protein_name'
    output_filename = 'curtainptm_input.txt'
    output_meta = false
    sequence_window_size = 21
}

profiles {
    docker {
        docker.enabled = true
    }
    singularity {
        singularity.enabled = true
        singularity.autoMounts = true
    }
    conda {
        conda.enabled = true
    }
}
